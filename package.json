{
  "name": "@learninglocker/xapi-service",
  "version": "0.0.0-development",
  "description": "A service for the xAPI",
  "main": "dist/server.js",
  "typings": "dist/server.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LearningLocker/xapi-service.git"
  },
  "files": [
    "dist",
    ".env.example",
    "package-lock.json"
  ],
  "scripts": {
    "start": "node dist/server.js",
    "start:dev": "nodemon",
    "build": "tsc",
    "test": "SERVICE_AWAIT_UPDATES=true AUTH_REPO=test mocha $(find dist -name '*.test.js') --timeout 20000 --exit --bail",
    "test-local": "STORAGE_REPO=local nyc npm run test",
    "test-s3": "STORAGE_REPO=s3 npm run test",
    "test-azure": "STORAGE_REPO=azure npm run test",
    "test-google": "STORAGE_REPO=google npm run test",
    "cover-local": "nyc npm run test-local",
    "cover-s3": "nyc npm run test-s3",
    "cover-azure": "nyc npm run test-azure",
    "cover-google": "nyc npm run test-google",
    "clean": "rm -rf dist",
    "lint": "eslint --cache --quiet --fix src",
    "lint-ci": "eslint --quiet src",
    "semantic-release": "ht2-release-public-circleci-app",
    "codecov": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "postinstall": "patch-package"
  },
  "engines": {
    "node": ">6.0.0",
    "npm": ">3.0.0"
  },
  "dependencies": {
    "@azure/storage-blob": "^10.3.0",
    "@google-cloud/storage": "^5.8.1",
    "@learninglocker/xapi-validation": "^2.1.10",
    "accept-language-parser": "^1.5.0",
    "atob": "^2.0.3",
    "aws-sdk": "^2.205.0",
    "bluebird": "3.7.2",
    "boolean": "^0.2.0",
    "btoa": "^1.1.2",
    "dotenv": "^8.0.0",
    "express": "^4.14.1",
    "fs-extra": "^8.0.0",
    "google-auth-library": "7.0.4",
    "http-status-codes": "^2.0.0",
    "install": "^0.13.0",
    "ioredis": "^4.14.0",
    "jscommons": "^3.0.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.4",
    "mime-types": "2.1.31",
    "mongodb": "^3.0.2",
    "node-fetch": "^2.0.0",
    "object-hash": "^2.0.0",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0",
    "query-string": "^6.8.2",
    "redis": "^3.0.0",
    "rulr": "^4.0.0",
    "sha1": "^1.1.1",
    "source-map-support": "^0.5.0",
    "stream-to-string": "^1.2.0",
    "string-to-stream": "^2.0.0",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "12.1.4",
    "@ht2-labs/semantic-release": "2.0.98",
    "@ht2-labs/typescript-project": "2.0.60",
    "@types/accept-language-parser": "1.5.3",
    "@types/atob": "2.1.2",
    "@types/btoa": "1.2.3",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.13",
    "@types/fs-extra": "8.1.2",
    "@types/ioredis": "3.2.24",
    "@types/jsonwebtoken": "8.5.5",
    "@types/lodash": "4.14.176",
    "@types/mime-types": "2.1.0",
    "@types/mocha": "8.2.1",
    "@types/mongodb": "3.6.18",
    "@types/node": "9.6.61",
    "@types/node-fetch": "2.5.8",
    "@types/object-hash": "1.3.4",
    "@types/redis": "2.8.32",
    "@types/source-map-support": "0.5.3",
    "@types/supertest": "2.0.11",
    "@types/uuid": "8.3.4",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "codecov": "3.8.1",
    "colors": "1.4.0",
    "commitlint": "12.1.4",
    "eslint": "7.29.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-deprecation": "1.3.1",
    "eslint-plugin-functional": "3.2.1",
    "eslint-plugin-import": "2.24.0",
    "eslint-plugin-prettier": "3.4.1",
    "husky": "4.3.8",
    "mocha": "8.3.2",
    "nodemon": "2.0.14",
    "nyc": "15.1.0",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.3",
    "rimraf": "3.0.2",
    "shelljs": "0.8.4",
    "simple-git": "2.40.0",
    "supertest": "6.1.3",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.3.3"
  },
  "resolutions": {
    "normalize-url": "^6.0.1",
    "@npmcli/git": "^2.0.8",
    "@npmcli/arborist": "^2.8.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged && yarn lint"
    }
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        0,
        "always",
        [
          "sentence-case"
        ]
      ],
      "subject-case": [
        0,
        "always",
        [
          "sentence-case"
        ]
      ]
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "functional",
      "import",
      "deprecation"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:functional/recommended",
      "prettier",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript"
    ],
    "rules": {
      "no-magic-numbers": [
        "error",
        {
          "ignore": [
            -1,
            0,
            1
          ]
        }
      ],
      "complexity": "error",
      "deprecation/deprecation": "error",
      "@typescript-eslint/explicit-module-boundary-types": "warn",
      "no-async-promise-executor": "warn",
      "no-use-before-define": "error",
      "functional/functional-parameters": "off",
      "functional/no-expression-statement": "off",
      "functional/no-conditional-statement": "off",
      "functional/prefer-type-literal": "off",
      "functional/no-throw-statement": "off",
      "functional/no-try-statement": "off",
      "functional/prefer-readonly-type": [
        "error",
        {
          "ignoreCollections": true
        }
      ],
      "functional/immutable-data": "warn",
      "functional/no-mixed-type": "off",
      "no-console": [
        "error",
        {
          "allow": [
            "debug",
            "info",
            "warn",
            "error"
          ]
        }
      ],
      "import/order": "error",
      "import/no-unassigned-import": "error"
    }
  }
}
