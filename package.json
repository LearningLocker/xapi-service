{
  "name": "@learninglocker/xapi-service",
  "version": "0.0.0-development",
  "description": "A service for the xAPI",
  "main": "dist/server.js",
  "typings": "dist/server.d.ts",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/LearningLocker/xapi-service.git"
  },
  "files": [
    "dist",
    ".env.example",
    "package-lock.json"
  ],
  "scripts": {
    "start": "node dist/server.js",
    "start:dev": "nodemon",
    "build": "tsc",
    "test": "SERVICE_AWAIT_UPDATES=true AUTH_REPO=test mocha $(find dist -name '*.test.js') --timeout 6000 --exit",
    "test-s3": "MODELS_REPO=mongo STORAGE_REPO=s3 npm run test",
    "test-google": "MODELS_REPO=mongo STORAGE_REPO=google npm run test",
    "test-azure": "MODELS_REPO=mongo STORAGE_REPO=azure npm run test",
    "test-mongo": "MODELS_REPO=mongo STORAGE_REPO=local npm run test",
    "test-sentinel": "MODELS_REPO=mongo STORAGE_REPO=local EVENTS_REPO=sentinel npm run test",
    "test-ci": "npm run test-mongo",
    "test-all": "npm run test-ci && npm run test-s3 && npm run test-google && npm run test-sentinel && npm run test-azure",
    "cover-ci": "nyc --lines 100 --check-coverage --exclude '(dist/**/*google*|dist/**/*azure*|dist/**/*s3*|dist/**/*fetch*|dist/**/*fake*|dist/config.js|dist/**/factory.js|dist/**/facade.js|dist/**/connectToSentinel.js)' npm run test-ci",
    "cover-all": "nyc --lines 100 --check-coverage --exclude '(dist/**/*fetch*|dist/**/*fake*|dist/config.js|dist/**/factory.js|dist/**/facade.js)' npm run test-all",
    "clean": "rm -rf dist",
    "lint": "tslint -p ./tsconfig.json",
    "lint-ci": "yarn lint -- -c tslint.ci.json -q",
    "duplication": "jscpd",
    "semantic-release": "ht2-release-public-circleci-app"
  },
  "engines": {
    "node": ">6.0.0",
    "npm": ">3.0.0"
  },
  "dependencies": {
    "@azure/storage-blob": "^10.3.0",
    "@google-cloud/storage": "^1.5.2",
    "@learninglocker/xapi-validation": "^2.1.10",
    "accept-language-parser": "^1.5.0",
    "atob": "^2.0.3",
    "aws-sdk": "^2.205.0",
    "bluebird": "3.7.2",
    "boolean": "^0.2.0",
    "btoa": "^1.1.2",
    "dotenv": "^8.0.0",
    "express": "^4.14.1",
    "fs-extra": "^8.0.0",
    "http-status-codes": "^1.3.0",
    "install": "^0.13.0",
    "ioredis": "^4.14.0",
    "jscommons": "^2.4.14",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.4",
    "mime-types": "2.1.27",
    "mongodb": "^3.0.2",
    "node-fetch": "^2.0.0",
    "object-hash": "^2.0.0",
    "query-string": "^6.8.2",
    "redis": "^2.8.0",
    "rulr": "^4.0.0",
    "sha1": "^1.1.1",
    "source-map-support": "^0.5.0",
    "stream-to-string": "^1.2.0",
    "string-to-stream": "^2.0.0",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "@ht2-labs/semantic-release": "2.0.12",
    "@ht2-labs/typescript-project": "2.0.50",
    "@types/accept-language-parser": "1.5.1",
    "@types/atob": "2.1.2",
    "@types/btoa": "1.2.3",
    "@types/dotenv": "4.0.3",
    "@types/express": "4.17.3",
    "@types/fs-extra": "8.1.1",
    "@types/google-cloud__storage": "1.7.0",
    "@types/ioredis": "3.2.24",
    "@types/jsonwebtoken": "8.5.0",
    "@types/lodash": "4.14.156",
    "@types/mime-types": "2.1.0",
    "@types/mocha": "5.2.7",
    "@types/mongodb": "3.5.24",
    "@types/node": "9.6.56",
    "@types/node-fetch": "2.5.7",
    "@types/object-hash": "1.3.3",
    "@types/redis": "2.8.22",
    "@types/source-map-support": "0.5.1",
    "@types/supertest": "2.0.9",
    "@types/uuid": "3.4.9",
    "@types/winston": "2.4.4",
    "colors": "1.4.0",
    "husky": "4.2.5",
    "jscpd": "0.6.25",
    "mocha": "6.2.3",
    "nodemon": "2.0.4",
    "nyc": "11.9.0",
    "rimraf": "2.7.1",
    "shelljs": "0.8.4",
    "simple-git": "1.132.0",
    "supertest": "3.4.2",
    "ts-node": "8.10.2",
    "tsconfig-paths": "3.9.0",
    "tslint": "5.20.1",
    "tslint-consistent-codestyle": "1.16.0",
    "tslint-immutable": "4.9.1",
    "typescript": "3.7.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint-ci"
    }
  }
}
